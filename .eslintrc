{
    "env": {
        "browser": true,
        "node": true
    },
    "plugins": [
        "eslint-plugin-react"
    ],
    "rules": {
        "indent": ["warn", 4],
        "max-len": ["warn", 350],
        "no-unused-expressions":["off", { "extensions": [".js", ".jsx"] }],
        "react/jsx-indent": ["warn", 4],
        "react/jsx-indent-props": ["warn", 4],
        "react/jsx-filename-extension": [1, { "extensions": [".js", ".jsx"] }],
        "import/no-extraneous-dependencies": ["error", {"devDependencies": true}],
        "no-underscore-dangle": [1,  {"allow": ["__PRELOADED_STATE__"]}]
    },
    "extends": "airbnb"
}
